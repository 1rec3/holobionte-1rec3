<!-- Hardware Monitor Widget -->
<div id="hw-monitor" style="position:fixed;top:10px;right:10px;background:rgba(0,0,0,0.8);color:#0ff;padding:10px;border-radius:8px;font-family:monospace;font-size:11px;z-index:9999;">
  <div id="cpu-stat">CPU: --</div>
  <div id="ram-stat">RAM: --</div>
  <div id="gpu-stat">GPU: --</div>
  <div id="npu-stat">NPU: 50 TOPS</div>
</div>

<script>
// Actualiza stats cada 2s
setInterval(async () => {
  const stats = await window.electronAPI.getHardwareStats();
  document.getElementById('cpu-stat').textContent = `CPU: ${stats.cpu}%`;
  document.getElementById('ram-stat').textContent = `RAM: ${stats.ram}%`;
  document.getElementById('gpu-stat').textContent = `GPU: ${stats.gpu}`;
}, 2000);
</script>
